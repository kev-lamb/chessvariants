    <title>Welcome to the standard game page</title>
  </head>
  <body onload="settitle()">
    <%-include('partials/navbar') %>
    <h1 id="title"></h1>
    <div id="parent">
        <div id="board" style="width: 400px" class="child board"></div>
        <div id="moves-container" class="child moves-container">
            <table id="moves" class="table table-striped table-hover table-dark">
                <thead>
                  <tr>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                  </tr>
                </thead>
                <tbody id="movebody">
                </tbody>
              </table>
        </div>
    </div>


<button id="startBtn">Reset Board</button>
<p id="your-color"> </p>
<p>Choose your color</p>
<div class="color-container">
  <button id="white" disabled>White</button>
  <button id="black" disabled>Black</button>
  <button id="local">Local Play</button>
</div>

    <!-- Optional JavaScript; choose one of the two! -->

